#!/bin/bash
set -mex
cd $(dirname $0)

../weborf -b site1 -p 12345 &
WEBORF_PID=$(jobs -p)

function cleanup () {
    kill -9 $WEBORF_PID
}
trap cleanup EXIT
sleep 0.1

ROBOTS=$(curl -s http://127.0.0.1:12345/robots.txt)
[[ "$ROBOTS" = $(cat site1/robots.txt) ]]

ROBOTS=$(curl -s http://127.0.0.1:12345/empty)
[[ "$ROBOTS" = '' ]]

curl -s http://127.0.0.1:12345/cgi.py | grep "import os"
